generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  passwordHash  String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  trips         Trip[]
}

model Trip {
  id               String         @id @default(cuid())
  userId           String
  name             String
  destinationCity  String
  startDate        DateTime
  endDate          DateTime
  totalBudget      Float
  baseCurrency     String
  hotelDetails     String?
  flightDetails    String?
  notes            String?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  user             User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  expenses         Expense[]
  packingItems     PackingItem[]
  mapLocations     MapLocation[]

  @@index([userId])
}

model Expense {
  id                  String          @id @default(cuid())
  tripId               String
  title                String
  category             String
  amountOriginal       Float
  currencyOriginal     String
  amountBase           Float
  date                 DateTime
  createdAt            DateTime        @default(now())
  updatedAt            DateTime        @updatedAt
  trip                 Trip            @relation(fields: [tripId], references: [id], onDelete: Cascade)

  @@index([tripId])
}

model PackingItem {
  id          String      @id @default(cuid())
  tripId       String
  name         String
  packed       Boolean     @default(false)
  createdAt    DateTime    @default(now())
  trip         Trip        @relation(fields: [tripId], references: [id], onDelete: Cascade)

  @@index([tripId])
}

model MapLocation {
  id          String      @id @default(cuid())
  tripId       String
  label        String
  markerType   String
  note         String
  lat          Float
  lng          Float
  createdAt    DateTime    @default(now())
  trip         Trip        @relation(fields: [tripId], references: [id], onDelete: Cascade)

  @@index([tripId])
}